{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node20/tsconfig.json"
  ],
  "compilerOptions": {
    "noEmit": true,
    "lib": ["dom", "esnext"],
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "types": ["vite/client", "vite-plugin-solid-svg/types"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": ["dist/**/*"]
}
