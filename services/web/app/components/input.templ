package components

type InputProps struct {
	Type        string
	Placeholder string
	Icon        string
	Class       string
}

templ Input(props InputProps) {
	<div class={ "lc-input" , props.Class }>
		if props.Icon != "" {
			@Icon(IconProps{Name: props.Icon})
		}
		<input
			type={ props.Type }
			placeholder={ props.Placeholder }
		/>
	</div>
}
